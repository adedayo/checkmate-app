{
  "name": "checkmate-app",
  "description": "Security static analysis tool. Find secrets in source code and configuration files",
  "version": "0.1.10",
  "main": "main.js",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adedayo/checkmate-app.git"
  },
  "author": "Dr. Adedayo Adetoye (aka Dayo)",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "local": "./local-build-package-checkmate.sh && npm run start",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:web": "ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "NODE_ENV=production npm run build -- -c production",
    "build:prod-win": "npm run build -- -c production",
    "build:web:prod": "NODE_ENV=production npm run build:web -- -c production",
    "ng:serve": "ng serve -c web -o",
    "download:checkmate": "./download-checkmate.sh",
    "download:checkmate-win": ".\\download-checkmate.ps1",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
    "electron:local": "npm run build:prod && npx electron .",
    "electron:build": "npm run download:checkmate && npm i && npm run build:prod && electron-builder build --publish always",
    "electron:build:windows": "npm run download:checkmate-win && npm i && npm run build:prod-win && electron-builder build --publish always",
    "electron:build:dev": "./local-build-package-checkmate.sh && npm i && npm run build:dev && electron-builder build",
    "release": "electron-builder",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run build:prod && cross-env TS_NODE_PROJECT='e2e/tsconfig.e2e.json' mocha --timeout 300000 --require ts-node/register e2e/**/*.e2e.ts",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "13.0.2",
    "@angular/cdk": "13.0.2",
    "@angular/common": "13.0.2",
    "@angular/core": "13.0.2",
    "@angular/forms": "13.0.2",
    "@angular/material": "13.0.2",
    "@angular/platform-browser": "13.0.2",
    "@angular/platform-browser-dynamic": "13.0.2",
    "@angular/router": "13.0.2",
    "@ctrl/ngx-codemirror": "5.0.1",
    "@fortawesome/angular-fontawesome": "0.10.1",
    "@fortawesome/fontawesome-svg-core": "1.2.36",
    "@fortawesome/free-brands-svg-icons": "5.15.4",
    "@fortawesome/free-regular-svg-icons": "5.15.4",
    "@fortawesome/free-solid-svg-icons": "5.15.4",
    "@swimlane/ngx-charts": "19.1.0",
    "@tailwindcss/forms": "0.3.4",
    "@tailwindcss/typography": "0.4.1",
    "codemirror": "5.63.3",
    "d3": "6.7.0",
    "ngx-electron": "2.2.0",
    "ngx-liquid-gauge": "^2.0.9",
    "rxjs": "6.6.7",
    "tslib": "2.1.0",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^13.0.0",
    "@angular-devkit/build-angular": "^13.0.3",
    "@angular-eslint/builder": "^13.0.1",
    "@angular-eslint/eslint-plugin": "13.0.1",
    "@angular-eslint/eslint-plugin-template": "13.0.1",
    "@angular-eslint/schematics": "^13.0.1",
    "@angular-eslint/template-parser": "13.0.1",
    "@angular/cli": "^13.0.3",
    "@angular/compiler": "13.0.2",
    "@angular/compiler-cli": "13.0.2",
    "node-forge": ">=1.0.0",
    "@types/codemirror": "5.60.0",
    "@types/d3": "6.7.0",
    "@types/d3-shape": "2.1.0",
    "@types/jasmine": "3.7.6",
    "@types/node": "15.6.1",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "codelyzer": "6.0.2",
    "electron": "13.5.2",
    "electron-builder": "22.13.1",
    "electron-reload": "1.5.0",
    "eslint": "7.27.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsdoc": "35.1.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "jasmine-core": "3.7.1",
    "jasmine-spec-reporter": "7.0.0",
    "json-schema": "0.4.0",
    "karma": "6.3.2",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage": "2.0.3",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.6.0",
    "mocha": "8.4.0",
    "ng-packagr": "13.0.6",
    "npm-run-all": "4.1.5",
    "postcss": "8.3.0",
    "protractor": "^7.0.0",
    "tailwindcss": "2.2.19",
    "ts-node": "10.0.0",
    "tslib": "2.3.1",
    "tslint": "6.1.3",
    "typescript": "4.4.3",
    "wait-on": "5.3.0",
    "webdriver-manager": "^12.1.8"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "build": {
    "productName": "CheckMate",
    "appId": "com.securityauditlabs.checkmate",
    "directories": {
      "output": "release/"
    },
    "files": [
      "**/*",
      "!**/dist/builder-debug.yml",
      "!**/dist/builder-effective-config.yml",
      "!**/dist/CheckMate*",
      "!**/dist/mac/*",
      "!**/dist/win/*",
      "!**/dist/linux/*",
      "!checkmate-binary/*",
      "!**/.metals",
      "!**/.vscode",
      "!.browserslistrc",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tsconfig.serve.json",
      "!tsconfig.spec.json",
      "!tsconfig.app.json",
      "!tslint.json",
      "!**/*.sh",
      "!notes.txt",
      "!tailwind.config.js"
    ],
    "win": {
      "icon": "build/icons/CheckMateLogo.ico",
      "target": [
        "portable"
      ],
      "publish": [
        "github"
      ]
    },
    "mac": {
      "icon": "build/icons/CheckMateLogo.icns",
      "target": [
        "dmg"
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "build/icons/CheckMateLogo.png",
      "target": [
        "AppImage"
      ],
      "publish": [
        "github"
      ]
    },
    "extraResources": [
      {
        "from": "checkmate-binary/darwin/checkmate",
        "to": "checkmate",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "checkmate-binary/linux/checkmate",
        "to": "checkmate",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "checkmate-binary/windows/checkmate.exe",
        "to": "checkmate.exe",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/adedayo/checkmate-app/issues"
  },
  "homepage": "https://github.com/adedayo/checkmate-app#readme"
}
